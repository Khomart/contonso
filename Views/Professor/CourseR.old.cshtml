@model ContosoUniversity.Models.TeachingRequest

@{
    ViewData["Title"] = "CourseRequest";
}

<h2>CourseRequest</h2>

<form asp-action="CourseRequest">
    <div class="form-horizontal">
        <h4>TeachingRequest</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Annotation" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Annotation" class="form-control" />
                <span asp-validation-for="Annotation" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SemesterForAssignment" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="SemesterForAssignment" class="form-control" asp-items="@ViewBag.Semesters">
                    <option value="">-- Select Grade --</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Approved"/>
                    <label asp-for="Approved"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

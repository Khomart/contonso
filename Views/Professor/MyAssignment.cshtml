@model ContosoUniversity.Models.CourseAssignment

@{
    ViewData["Title"] = "Courseinfo";
}

<h2>Courseinfo</h2>

<form asp-action="MyAssignment">
    <div class="form-horizontal">
        <h4>Enrollment</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="AssignmentID" />
        <div class="form-group">
            <label asp-for="CourseDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea rows="10" asp-for="CourseDescription" class="form-control"></textarea>
                <span asp-validation-for="CourseDescription" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="ProfessorIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
